<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">註冊會員</h1>
      {{> message}}
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">姓名</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name" value={{name}}>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value={{email}}>
        </div>
        <div class="form-group">
          <label for="password">密碼</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
            value={{password}}>
        </div>
        <div class="form-group">
          <label for="confirmPassword">確認密碼</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="Enter Password" value={{confirmPassword}}>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Register</button>
        <a href="/auth/facebook" class="btn btn-info btn-block">Facebook</a>
      </form>
      <p class="lead mt-4">
        Have an account? <a href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>