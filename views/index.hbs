<!-- search & sort bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search" class="row">
        <h4 class="mb-2 col-12">尋找餐廳：</h4>
        <div class="input-group col-8">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
        <select class="form-control col-4" name="sortBy" onchange="this.form.submit()">
          <option value=" _id">排序方式</option>
          <option value="rating_d" {{#if (eq sortBy 'rating_d' )}} selected {{/if}}>評分高->低</option>
          <option value="rating_a" {{#if (eq sortBy 'rating_a' )}} selected {{/if}}>評分低->高</option>
          <option value="location" {{#if (eq sortBy 'location' )}} selected {{/if}}>地區</option>
          <option value="category" {{#if (eq sortBy 'category' )}} selected {{/if}}>類別</option>
        </select>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  {{!-- <div class="row">
    <div class="col"></div>
  </div> --}}
  <div class="column">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}} <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
              <a href="/restaurants/{{this._id}}" button type="submit"
                class="btn btn-outline-primary btn-spacing">介紹</a>
              <a href="/restaurants/{{this._id}}/edit" button type="submit"
                class="btn btn-outline-info btn-spacing">編輯</a>
              <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST" style="display: inline">
                <button type="submit" class="btn btn-outline-danger btn-spacing">刪除</button>
              </form>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<!-- create new restaurant button -->
<div class="bottom-button">
  <a href="./restaurants/new" class="btn btn-major" role="button">建立新餐廳</a>
</div>